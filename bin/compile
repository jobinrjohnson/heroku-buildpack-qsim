#!/usr/bin/env bash
# bin/compile <build-dir> <cache-dir>

set -e
set -o pipefail

BUILD_DIR=$1
CACHE_DIR=$2
ENV_DIR=${3:-}
BP_DIR=$(cd $(dirname ${0:-}); cd ..; pwd)

function indent() {
  c='s/^/       /'
  case $(uname) in
    Darwin) sed -l "$c";;
    *)      sed -u "$c";;
  esac
}

cd $BUILD_DIR

echo "Installing CMAKE" | indent
mkdir -p deps
curl --retry 3 https://cmake.org/files/v3.8/cmake-3.8.1-Linux-x86_64.tar.gz --output deps/cmake-3.8.1-Linux-x86_64.tar.gz
tar xzf deps/cmake-3.8.1-Linux-x86_64.tar.gz -C deps
$BUILD_DIR/deps/cmake-3.8.1-Linux-x86_64/bin/cmake --version



# configure
if [ -f configure ]; then
  echo "-----> Configuring"
  ./configure 2>&1 | indent
fi

# make
echo "-----> Compiling with Make"
make 2>&1 | indent
